<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp">

    <View
        android:layout_width="186dp"
        android:layout_height="72dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/top_end_bg"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toTopOf="@id/discountBar"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="24dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/products"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Flash Sale"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="32sp">
        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/products"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Choose Your Discount"
            android:textColor="@color/black"
            android:textSize="16sp">
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/discountBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="24dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/timer"
            app:tint="@color/white"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/products"
            app:layout_constraintStart_toStartOf="parent"
            android:text="00"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:background="@drawable/timer_bg"
            android:backgroundTint="@color/white"
            android:layout_marginEnd="4dp"
            android:textSize="24sp">
        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/products"
            app:layout_constraintStart_toStartOf="parent"
            android:text="36"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:background="@drawable/timer_bg"
            android:backgroundTint="@color/white"
            android:textSize="24sp">
        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/products"
            app:layout_constraintStart_toStartOf="parent"
            android:text="58"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:background="@drawable/timer_bg"
            android:backgroundTint="@color/white"
            android:layout_marginStart="4dp"
            android:textSize="24sp">
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/discountBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/discountFilter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="24dp"
        android:weightSum="6"
        android:baselineAligned="false"
        android:background="@drawable/discount_bar">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="All"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:paddingVertical="8dp"
            android:gravity="center"
            android:layout_gravity="center">
        </TextView>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="10%"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:paddingVertical="8dp"
            android:gravity="center"
            android:layout_gravity="center">
        </TextView>

        <TextView
            android:id="@+id/disc20"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="20%"
            android:layout_weight="1"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#0000FF"
            android:background="@drawable/button_outline"
            android:gravity="center"
            android:paddingHorizontal="16dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="30%"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:paddingVertical="8dp"
            android:gravity="center"
            android:layout_gravity="center">
        </TextView>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="40%"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:paddingVertical="8dp"
            android:gravity="center"
            android:layout_gravity="center">
        </TextView>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="50%"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:paddingVertical="8dp"
            android:gravity="center"
            android:layout_gravity="center">
        </TextView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/discountFilter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/products"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal"
        android:layout_margin="4dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:layout_constraintBottom_toTopOf="@id/products"
            app:layout_constraintStart_toStartOf="parent"
            android:text="20% Discount"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20sp">
        </TextView>

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/display_settings"
            app:layout_constraintBottom_toTopOf="@id/products"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_gravity="end"
            app:tint="#808080"
            android:rotation="90">

        </ImageView>
    </LinearLayout>


    <GridLayout
        android:id="@+id/products"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bottom_nav">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_marginBottom="8dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:src="@drawable/pfp"
                android:background="@drawable/card_bg"
                android:layout_margin="4dp"
                android:scaleType="centerCrop"
                android:clipToOutline="true"
                tools:targetApi="31">
            </ImageView>

            <TextView
                android:layout_width="144dp"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:maxLines="2"
                android:textSize="12sp"
                android:text="Lorem ipsum dolor sit amet consectetur">

            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:layout_marginEnd="4dp"
                    android:layout_marginStart="4dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:text="$16,00">
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:textColor="#EA3B52"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:alpha="0.2"
                    android:text="$20,00">
                </TextView>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="160dp"
                android:src="@drawable/pfp"
                android:background="@drawable/card_bg"
                android:layout_margin="4dp"
                android:scaleType="centerCrop"
                android:clipToOutline="true"
                tools:targetApi="31">
            </ImageView>

            <TextView
                android:layout_width="144dp"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:maxLines="2"
                android:textSize="12sp"
                android:text="Lorem ipsum dolor sit amet consectetur">

            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:layout_marginEnd="4dp"
                    android:layout_marginStart="4dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:text="$16,00">
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:textColor="#EA3B52"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:alpha="0.2"
                    android:text="$20,00">
                </TextView>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_marginBottom="8dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="160dp"
                android:src="@drawable/pfp"
                android:background="@drawable/card_bg"
                android:layout_margin="4dp"
                android:scaleType="centerCrop"
                android:clipToOutline="true"
                tools:targetApi="31">
            </ImageView>

            <TextView
                android:layout_width="144dp"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:maxLines="2"
                android:textSize="12sp"
                android:text="Lorem ipsum dolor sit amet consectetur">

            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:layout_marginEnd="4dp"
                    android:layout_marginStart="4dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:text="$16,00">
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:textColor="#EA3B52"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:alpha="0.2"
                    android:text="$20,00">
                </TextView>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_marginBottom="4dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="160dp"
                android:src="@drawable/pfp"
                android:background="@drawable/card_bg"
                android:layout_margin="4dp"
                android:scaleType="centerCrop"
                android:clipToOutline="true"
                tools:targetApi="31">
            </ImageView>

            <TextView
                android:layout_width="144dp"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:maxLines="2"
                android:textSize="12sp"
                android:text="Lorem ipsum dolor sit amet consectetur">

            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:layout_marginEnd="4dp"
                    android:layout_marginStart="4dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:text="$16,00">
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:textColor="#EA3B52"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:alpha="0.2"
                    android:text="$20,00">
                </TextView>

            </LinearLayout>

        </LinearLayout>

    </GridLayout>

    <LinearLayout
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp"
        android:weightSum="5"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/home"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/discover" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/orders" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:src="@drawable/inbox" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/person" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>